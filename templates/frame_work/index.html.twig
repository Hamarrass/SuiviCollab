    <script>
        function showSection(section) {
            // Hide both sections
            document.getElementById('framework-section').style.display = 'none';
            document.getElementById('cms-section').style.display = 'none';

            // Show the selected section
            if (section === 'framework') {
                document.getElementById('framework-section').style.display = 'block';
                document.getElementById('framework-btn').classList.add('active');
                document.getElementById('cms-btn').classList.remove('active');
            } else if (section === 'cms') {
                document.getElementById('cms-section').style.display = 'block';
                document.getElementById('cms-btn').classList.add('active');
                document.getElementById('framework-btn').classList.remove('active');
            }
        }
    </script>
